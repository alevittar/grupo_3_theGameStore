  <body>
    <%- include('./partials/header.ejs') %>
    <!-- Main content -->
    <main>
      <!-- login.ejs -->

<!-- Agrega esta sección para mostrar un mensaje de error -->
<form id="login" method="POST" action="/auth/login">
  <label for="email">Correo Electrónico:</label>
  <input type="email" name="email" id="email" required>
  <br>
  <label for="password">Contraseña:</label>
  <input type="password" name="password" id="password" required>
  <br>
  <button id="inicio" type="submit">Iniciar Sesión</button>
</form>

<% if (locals.error) { %> <!-- Cambiar 'query' por 'locals' -->
  <p style="color: red;">Credenciales incorrectas. Inténtalo de nuevo.</p>
<% } %>

<!-- Agrega el botón de registro -->
<p class="register">¿No tienes una cuenta? <a href="/users/create">Regístrate aquí</a>.</p>
    <!-- Footer -->
    <%- include('./partials/footer') %>

  </body>
</html>
